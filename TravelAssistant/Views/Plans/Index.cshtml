@model IEnumerable<TravelAssistant.Models.TravelPlan>

@{
    ViewBag.Title = "Index";
}

<h2>Plany podróży</h2>

<p>
    @Html.ActionLink("Dodaj nowy plan", "AddNewPlan", "Plans")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
   
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Zobacz", "Details", new { id=item.TravelPlanId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.TravelPlanId })
        </td>
    </tr>
}

</table>
